buf[0] = 0x3;
buf[1] = 0x4;
buf[2] = 0x23;
buf[3] = 0x42;
for (ii = 0; ii < buf\.length; ii++) {
  console\.log(buf\.readUInt8(ii, true));
  console\.log(buf\.readUInt8(ii, false));
}
// 0x3
// 0x3
// 0x4
// 0x4
// 0x23
// 0x23
// 0x42
// 0x42
.
