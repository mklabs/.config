#!/bin/bash

dir="$(dirname "$0")"

cd ~/.dotfiles
mkdir -p .vendors

# Install oh my zsh & Sindre's pure prompt
source $dir/zsh

# Backup and link .dotfiles in this repo (must happen after oh-my-zsh install
# to replace ozsh default's zshrc)
source $dir/dotfiles

# Ubuntu stuff
source $dir/ubuntu

# Z jumper
source $dir/z

# Install packages (git, etc.)
source $dir/packages

# Configure terminal profile & font
source $dir/themes

# Install node & nvm
source $dir/node

# Install chrome
source $dir/chrome
